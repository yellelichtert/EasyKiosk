@using Blazor.Bootstrap.Icons.Components


<div class="container-fluid h-100 d-flex flex-column border rounded">

    @* Toolbar *@
    <div class="d-flex justify-content-between align-items-center bg-light p-3 border-bottom rounded-top">

        <div>
            <input value="Search..." type="text"/>
        </div>

        <div class="align-content-stretch">
            
            @if (CreateHandler is not null)
            {
                <button class="btn btn-success" onclick="@CreateHandler"><BiPlusLg/></button>
            }
            
            @if (DeleteHandler is not null)
            {
                <button class="btn btn-danger text-white" onclick="@DeleteHandler"><BiTrashFill/></button>
            }
            
        </div>

    </div>
    
    
    
    @* List  *@
    <div class="flex-grow-1 overflow-scroll">
        
        @ChildContent
        
    </div>
    
</div>

@code {

    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public Action? CreateHandler { get; set; }
    [Parameter] public Action? DeleteHandler { get; set; }
    
}