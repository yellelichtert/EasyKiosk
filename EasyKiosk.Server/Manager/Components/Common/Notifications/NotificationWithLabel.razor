@using EasyKiosk.Server.Service

@using Blazor.Bootstrap.Icons.Components


<div class="d-flex card flex-grow-1 text-center p-1 shadow my-1 p-1" style="min-width: 100%">

    <div class="d-flex flex-grow-1">
        <button @onclick="DismissHandler" type="button" class="btn-close position-absolute d-flex justify-content-end"></button>

        @if (NotificationType == INotificationManager.Type.Warning)
        {
            <BiExclamationTriangleFill Class="text-warning col-2" Size="IconSize.x1"/>
        }
        else if (NotificationType == INotificationManager.Type.Succes)
        {
            <BiCheckCircleFill Class="text-success col-2" Size="IconSize.x1"/>
        }
        else
        {
            <BiInfoCircleFill class="text-primary col-2" Size="IconSize.x1"/>
        }

        <div class="d-flex flex-grow-1">
            @ChildContent
        </div>
    </div>

    
</div>



@code {
    [Parameter]public required INotificationManager.Type NotificationType { get; set; }
    [Parameter] public required Action DismissHandler { get; set; }
    [Parameter] public required RenderFragment ChildContent { get; set; }
}